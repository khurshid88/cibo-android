<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/scanFragment">

    <fragment
        android:id="@+id/scanFragment"
        android:name="com.cibo.cibo.fragment.ScanFragment"
        android:label="ScanFragment">
        <action
            android:id="@+id/actionOpenRestaurantFragment"
            app:destination="@id/restaurantFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.cibo.cibo.fragment.ProfileFragment"
        android:label="ProfileFragment">
        <action
            android:id="@+id/openEditProfile"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/openAboutUs"
            app:destination="@id/aboutUsFragment" />
    </fragment>

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.cibo.cibo.fragment.EditProfileFragment"
        android:label="EditProfileFragment" />

    <fragment
        android:id="@+id/aboutUsFragment"
        android:name="com.cibo.cibo.fragment.AboutUsFragment"
        android:label="AboutUsFragment" />

    <fragment
        android:id="@+id/restaurantFragment"
        android:name="com.cibo.cibo.fragment.RestaurantFragment"
        android:label="RestaurantFragment">

        <action
            android:id="@+id/openProductAboutFragment"
            app:destination="@id/productAboutFragment"
            app:launchSingleTop="true"
            app:enterAnim="@anim/slide_in_bottom"
            app:exitAnim="@anim/slide_out_bottom"/>
    </fragment>

    <dialog
        android:id="@+id/productAboutFragment"
        android:name="com.cibo.cibo.fragment.ProductAboutFragment"
        android:label="ProductAboutFragment">

        <action
            android:id="@+id/backRestaurantFragment"
            app:destination="@id/restaurantFragment" />
    </dialog>

</navigation>