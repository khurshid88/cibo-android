<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="175dp"
        app:cardBackgroundColor="#F9F9FB"
        app:cardElevation="0dp">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iv_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/anim_scan_order"
            app:lottie_repeatCount="-1"
            app:lottie_repeatMode="restart" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/font_proxima"
        android:gravity="center"
        android:text="@string/str_intro_one_title"
        android:textColor="@color/main_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/font_proxima"
        android:gravity="center"
        android:text="@string/str_intro_one_text"
        android:textColor="@color/main_dark"
        android:textSize="16sp" />

</LinearLayout>